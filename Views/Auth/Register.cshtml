@model RegisterVM

@{
    Layout = null;
}


<form asp-controller="Auth" asp-action="Register">
    <div asp-validation-summary=All></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirimPassword"></label>
        <input asp-for="ConfirimPassword" class="form-control" />
        <span asp-validation-for="ConfirimPassword" class="text-danger"></span>
    </div>

    @*<div class="form-check">
        <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
        <label asp-for="IsAdmin" class="form-check-label"></label>
    </div>*@

    <button type="submit" class="btn btn-primary">Register</button>

</form>